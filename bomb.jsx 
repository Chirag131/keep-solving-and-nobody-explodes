          <div className="mt-3 flex gap-2">
            <div className="w-3 h-3 bg-red-600 rounded-full shadow-[0_0_10px_4px_rgba(255,0,0,0.5)]"></div>
            <div className="w-3 h-3 bg-gray-800 rounded-full"></div>
            <div className="w-3 h-3 bg-gray-800 rounded-full"></div>
          </div>
        </div>

        {/* === MODULE 3: Wires === */}
        <div className={`${moduleStyle} flex flex-col justify-around px-2`}>
          {["red", "blue", "yellow", "white", "green"].map((color, i) => (
            <motion.div
              key={i}
              animate={{ scaleX: [1, 1.02, 1] }}
              transition={{ duration: 1.5, repeat: Infinity, delay: i * 0.3 }}
              className={`h-[4px] rounded-full bg-${color}-500 shadow-[0_0_10px_rgba(255,255,255,0.3)]`}
            ></motion.div>
