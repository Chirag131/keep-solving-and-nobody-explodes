          ))}
          <div className="absolute inset-0 bg-[radial-gradient(circle_at_30%_30%,rgba(255,255,255,0.05),transparent_70%)]"></div>
        </div>

        {/* === MODULE 2: Timer === */}
        <div
          className={`${moduleStyle} flex flex-col justify-center items-center`}
        >
          <motion.div
            animate={{ opacity: [1, 0.6, 1] }}
            transition={{ duration: 1.2, repeat: Infinity }}
            className="bg-black border-[3px] border-gray-800 rounded-lg px-8 py-4 text-red-500 text-6xl font-mono tracking-widest shadow-[inset_0_0_20px_rgba(255,0,0,0.4),0_0_20px_rgba(255,0,0,0.3)] text-center"
