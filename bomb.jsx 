        <div className="absolute inset-0 rounded-2xl pointer-events-none border-[1px] border-[#ff000020] shadow-[0_0_30px_#ff000015,0_0_10px_#ff000010,inset_0_0_40px_#ff000010]"></div>

        {/* === MODULE 1: Color Pads === */}
        <div className={`${moduleStyle} grid grid-cols-2 gap-3`}>
          {["red", "blue", "yellow", "green"].map((color, i) => (
